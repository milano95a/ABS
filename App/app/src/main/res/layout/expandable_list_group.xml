<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/colorWhite"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/group_item_img"
            android:src="@drawable/placeholder"
            android:layout_marginLeft="10dp"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="100dp" />
        <LinearLayout
            android:layout_weight="3"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:padding="10dp"
                android:textColor="@color/colorFontDark"
                android:id="@+id/group_item_title"
                android:textStyle="bold"
                android:maxLines="3"
                android:ellipsize="end"
                android:text="Google’s fight with Uber over self-driving cars is heating up Google’s fight with Uber over self-driving cars is heating up"
                android:layout_width="match_parent"
                android:layout_height="70dp" />
            <TextView
                android:paddingLeft="6dp"
                android:textColor="@color/colorFontLight"
                android:text="2017-03-16T23:34:37Z"
                android:id="@+id/group_item_date"
                android:layout_width="match_parent"
                android:layout_height="30dp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>