<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/sign_gradient"
    android:id="@+id/activity_user_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cw.mad.a00003741.newsapp.UserProfile">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:theme="@style/ToolbarStyle"
        android:background="@color/colorPrimary">
    </android.support.v7.widget.Toolbar>

    <ImageView
        android:src="@drawable/profile"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="100dp" />

    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:padding="20dp"
            android:textColor="@color/colorLightGrey"
            android:textSize="20sp"
            android:text="Username:"
            android:layout_width="180dp"
            android:layout_height="wrap_content" />
        <EditText
            android:textColor="@color/colorWhite"
            android:padding="20dp"
            android:textSize="20sp"
            android:id="@+id/username"
            android:background="@color/colorTextLayout"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:padding="20dp"
            android:textColor="@color/colorLightGrey"

            android:textSize="20sp"
            android:text="Password:"
            android:layout_width="180dp"
            android:layout_height="wrap_content" />
        <EditText
            android:textColor="@color/colorWhite"
            android:padding="20dp"
            android:textSize="20sp"
            android:id="@+id/pass"
            android:background="@color/colorTextLayout"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:padding="20dp"
            android:textColor="@color/colorLightGrey"

            android:textSize="22sp"
            android:text="Re-Password:"
            android:layout_width="180dp"
            android:layout_height="wrap_content" />
        <EditText
            android:textColor="@color/colorWhite"

            android:padding="20dp"
            android:textSize="22sp"
            android:id="@+id/re_pass"
            android:background="@color/colorTextLayout"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <Button
        android:id="@+id/save"
        android:layout_margin="20dp"
        android:text="Save"
        android:padding="30dp"
        android:textColor="@color/colorWhite"
        android:background="@drawable/sign_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
